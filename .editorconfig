root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{frm,sh,toml,yml}]
indent_size = 2
indent_style = space

[*.{py,rst}]
indent_size = 4
indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf

[{.pre-commit-config.yaml,pyproject.toml,setup.cfg,tox.ini}]
indent_size = 4
indent_style = space
